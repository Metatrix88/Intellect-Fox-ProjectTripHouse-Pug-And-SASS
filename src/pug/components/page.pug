mixin page(props)
  doctype html
  html
    head
      meta(charset='UTF-8')
      meta(name='description', content='This web page is for finding temporary housing around the world')
      meta(name='keywords', content='tourism, apartments, destinations, booking')
      meta(name='author', content='Andrey Davidovich')
      meta(name='viewport', content='width=device-width, initial-scale=1.0')
      link(href=require('../../styles/index.scss'), rel='stylesheet')
      title= props.title
      link(rel='icon', type='image/png', href='../../assets/images/favicons/favicon.ico')
    body
      block
      script(src=require('../../js/index'))
